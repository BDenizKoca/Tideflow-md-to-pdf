{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Tideflow",
  "version": "1.3.0",
  "identifier": "com.tideflow.app.free",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Tideflow - Markdown to PDF Editor",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": "default-src 'self' 'unsafe-inline' 'unsafe-eval' ipc: http://ipc.localhost https://tauri.localhost http://asset.localhost https://asset.localhost file:; connect-src 'self' ipc: http://ipc.localhost https://tauri.localhost http://asset.localhost https://asset.localhost file:; img-src 'self' asset: http://asset.localhost https://asset.localhost blob: data: file:; font-src 'self' asset: http://localhost data: file:;",
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": [
            "$APPDATA/**",
            "$APPDATA/assets/**",
            "$DOWNLOAD/*",
            "$HOME/**",
            "$TEMP/**",
            "$CACHE/**"
          ],
          "requireLiteralLeadingDot": false
        }
      }
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "content/**/*",
      "templates/**/*",
      "styles/*",
      "bin/typst/**/*"
    ],
    "copyright": "Â© 2025 Burak Deniz Koca"
  }
}
